    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2019"
  },
  "include": [
    "src/**/*"
  ]
}
